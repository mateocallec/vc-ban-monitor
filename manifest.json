{
  "manifest_version": 3,
  "name": "VC Ban Monitor for Roblox",
  "version": "1.1.0",
  "author": "Mat√©o Florian Callec <mateo@callec.net>",
  "description": "VC Ban Monitor is a Chrome extension for Roblox that displays your voice chat ban status and a countdown timer.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://*.roblox.com/*",
    "https://voice.roblox.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.roblox.com/*"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "inject.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "VC Ban Monitor",
    "default_icon": {
      "16": "icons/icon-16x16.png",
      "48": "icons/icon-48x48.png",
      "128": "icons/icon-128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  }
}